<h1>All Articles</h1>

<ul id="articles">
    <% @articles.each do |article| %>
        <li>
            <%= link_to article.title, article_path(article), class: 'article_title' %> <%= link_to "delete", article_path(article), method: :delete, data: {confirm: "Really delete the article?"} %>
        </li>
    <% end %>
    <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
</ul>